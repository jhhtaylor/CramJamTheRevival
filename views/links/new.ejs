<% layout('layouts/boilerplate') -%>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a new link</h1>
            <div style="width: 30%; margin: 25px auto">
                <form action='/links' method='POST'>
                    <div class="form-group mt-2">
                        <input class="form-control" type='text' name='name' placeholder='Title' required>
                    </div>
                    <div class="form-group mt-2">
                        <input class="form-control " type='text' name='url' placeholder='Link URL' required>
                    </div>
                    <div class="form-group mt-2">
                        <select class="ui dropdown">
                            <option value="">Select Group</option>
                            <% for (let group of groups){%>
                                <option value="<%= group.name %>">
                                    <%=group.name %>
                                </option>
                                <% }%>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="header-btn theme-btn text-center mt-2">Submit!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>